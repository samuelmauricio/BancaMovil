<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista1"
    android:background="#f3eef1">

    <LinearLayout
        android:id="@+id/llbcp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#203095"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="BCP"
            android:textSize="50dp"
            android:textColor="#f2ffff"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
    <GridLayout
        android:id="@+id/glStepper"
        android:layout_below="@+id/llbcp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="1"
        android:layout_marginTop="1dp"
        android:background="@drawable/style_stepper">
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#ff7000"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:textColor="#f3fbfb"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#ada8b3"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2"
                    android:textColor="#f3fbfb"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#ada8b3"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="3"
                    android:textColor="#f3fbfb"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#ada8b3"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="4"
                    android:textColor="#f3fbfb"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <TextView
        android:id="@+id/tv_trajeta"
        android:layout_below="@+id/glStepper"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:text="Digite el numero de su Credimas"
        android:textSize="20dp"
        android:textColor="#6b8992"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"/>

    <GridLayout
        android:id="@+id/glinputs"
        android:layout_below="@+id/tv_trajeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="1"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/etnum1"
            android:layout_width="60dp"
            android:height="30dp"
            android:inputType="number"
            android:layout_marginLeft="30dp"
            android:maxLength="4"
            android:gravity="center"
            android:background="@drawable/style_inputs"/>
        <EditText
            android:id="@+id/etnum2"
            android:layout_width="60dp"
            android:height="30dp"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:maxLength="4"
            android:gravity="center"
            android:background="@drawable/style_inputs"/>
        <EditText
            android:id="@+id/etnum3"
            android:layout_width="60dp"
            android:height="30dp"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:maxLength="4"
            android:gravity="center"
            android:background="@drawable/style_inputs"/>
        <EditText
            android:id="@+id/etnum4"
            android:layout_width="60dp"
            android:height="30dp"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:maxLength="4"
            android:gravity="center"
            android:background="@drawable/style_inputs"/>
    </GridLayout>

    <TextView
        android:id="@+id/tv_clave_internet"
        android:layout_below="@+id/glinputs"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:text="Clave de internet"
        android:textSize="20dp"
        android:textColor="#6b8992"
        android:fontFamily="sans-serif-medium"
        android:gravity="left"/>

    <EditText
        android:id="@+id/et_clave_internet"
        android:layout_below="@+id/tv_clave_internet"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:maxLength="6"
        android:gravity="center"
        android:background="@drawable/style_inputs"/>

    <LinearLayout
        android:id="@+id/llOpciones"
        android:layout_below="@+id/tv_clave_internet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="180dp">
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:text="Cancelar"
            android:fontFamily="sans-serif-medium"
            android:textColor="#f3fbfb"
            android:background="@drawable/rounded_btn_disable"/>

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:text="Ingresar"
            android:fontFamily="sans-serif-medium"
            android:textColor="#f3fbfb"
            android:background="@drawable/rounded_btn"/>
    </LinearLayout>



</RelativeLayout>