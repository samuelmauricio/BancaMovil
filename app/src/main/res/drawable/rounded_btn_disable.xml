<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            //border radius
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                />
            //bordes color
            <stroke android:width="1dip" android:color="#6b8992" />
            //background
            <gradient android:angle="-90" android:startColor="#ada8b3" android:endColor="#e1dcdf" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            //border radius
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                />
            //bordes color
            <stroke android:width="1dip" android:color="#6b8992" />
            //background
            <gradient android:angle="-90" android:startColor="#ada8b3" android:endColor="#e1dcdf" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            //border radius
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                />
            //bordes color
            <stroke android:width="1dip" android:color="#6b8992" />
            //background
            <gradient android:angle="-90" android:startColor="#e1dcdf" android:endColor="#e1dcdf"/>
        </shape>
    </item>
</selector>