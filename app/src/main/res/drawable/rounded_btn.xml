<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            //border radius
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                />
            //bordes color
            <stroke android:width="1dip" android:color="#ff5d00" />
            //background
            <gradient android:angle="-90" android:startColor="#ff5d00" android:endColor="#ff2800" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            //border radius
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                />
            //bordes color
            <stroke android:width="1dip" android:color="#ff5d00" />
            //background
            <gradient android:angle="-90" android:startColor="#ff5d00" android:endColor="#ff2800" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            //border radius
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                />
            //bordes color
            <stroke android:width="1dip" android:color="#D66220" />
            //background
            <gradient android:angle="-90" android:startColor="#ff5d00" android:endColor="#D66220"/>
        </shape>
    </item>
</selector>